{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    }
}
